{% extends 'base.html.twig' %}

{% block title %}Weather{% endblock %}

{% block body %}
    <h1>Weather</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ weather.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Temperature</th>
                <td>{{ weather.temperature }}</td>
            </tr>
            <tr>
                <th>Humiditi</th>
                <td>{{ weather.humiditi }}</td>
            </tr>
            <tr>
                <th>Wind_speed</th>
                <td>{{ weather.windSpeed }}</td>
            </tr>
            <tr>
                <th>Pressure</th>
                <td>{{ weather.pressure }}</td>
            </tr>
            <tr>
                <th>UV</th>
                <td>{{ weather.UV }}</td>
            </tr>
            <tr>
                <th>Weather_type</th>
                <td>{{ weather.weatherType }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_weather_measurement_index') }}">back to list</a>

    <a href="{{ path('app_weather_measurement_edit', {'id': weather.id}) }}">edit</a>

    {{ include('weather_measurement/_delete_form.html.twig') }}
{% endblock %}
