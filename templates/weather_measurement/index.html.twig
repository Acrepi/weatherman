{% extends 'base.html.twig' %}

{% block title %}Weather index{% endblock %}

{% block body %}
    <h1>Weather index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>Temperature</th>
                <th>Humiditi</th>
                <th>Wind_speed</th>
                <th>Pressure</th>
                <th>UV</th>
                <th>Weather_type</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for weather in weather %}
            <tr>
                <td>{{ weather.id }}</td>
                <td>{{ weather.date ? weather.date|date('Y-m-d') : '' }}</td>
                <td>{{ weather.temperature }}</td>
                <td>{{ weather.humiditi }}</td>
                <td>{{ weather.windSpeed }}</td>
                <td>{{ weather.pressure }}</td>
                <td>{{ weather.UV }}</td>
                <td>{{ weather.weatherType }}</td>
                <td>
                    {% if is_granted('ROLE_MEASUREMENT_SHOW') %}
                        <a href="{{ path('app_weather_measurement_show', {'id': weather.id}) }}">show</a>
                    {% endif %}
                    {% if is_granted('ROLE_MEASUREMENT_EDIT') %}
                        <a href="{{ path('app_weather_measurement_edit', {'id': weather.id}) }}">edit</a>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    {% if is_granted('ROLE_MEASUREMENT_NEW') %}
        <a href="{{ path('app_weather_measurement_new') }}">Create new</a>
    {% endif %}
{% endblock %}
